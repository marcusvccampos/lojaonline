<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.lojaonline.activity.CadastrarCategoria">


    <include layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


        <EditText
            android:id="@+id/edNomeCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="@string/hint_descricao_categoria" />

        <Button
            android:id="@+id/btFinalizarPedido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_custon_green"
            android:elevation="0dp"
            android:text="@string/text_button_salvar_categoria"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>
